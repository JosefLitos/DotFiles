#FontAwesome icons for use
#     ⚡ 
TEXT=$(acpi | cut -d " " -f3-5 | sed "s/,//g;s/Discharging/ /;s/Charging//;s/Unknown//;s/Full//;s/:..$//;s/ 0/ /g")

if ! [ -n "$TEXT" ]; then
	TEXT=
else
	STATE=$(echo $TEXT | sed "s/^. //;s/\%.*//")
	if [[ $STATE -le 51 ]]; then
		TEXT=$(echo $TEXT | sed "s//⚡/")
	fi
	if [[ $STATE -gt 15 ]] & ! [[ $TEXT == *""* ]]; then
		TEXT=$(echo $TEXT | sed "s/ ..%//")
	elif [[ $STATE -le 6 ]]; then
		case "$(echo -en "Battery low:  $STATE%\nI'll plug it in\nSuspend\nPower off" | rofi -dmenu)" in
			"Suspend") systemctl suspend;;
			"Power off") systemctl poweroff;;
		esac
	fi
fi

echo $TEXT
echo $TEXT
~/.config/i3blocks/colorcode $STATE
