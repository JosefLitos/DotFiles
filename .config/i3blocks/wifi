#Nice icons:    
if [[ $button -eq 1 ]]; then
	NAME="$(nmcli d wifi | sed -n 's/^\*//;/:/p' | awk '{ print $8"\t"$2 }' | rofi -dmenu -location 3 -p  | awk '{ print $2 }')"
	if [ "$NAME" ]; then
		PASSWD="$(rofi -dmenu -location 3 -l 0 -p )"
		if [ "$PASSWD" ]; then
			nmcli d wifi connect "$NAME" password "$PASSWD" >> /dev/null
		else
			nmcli d wifi connect "$NAME" >> /dev/null
		fi
	fi
fi

QUALITY=$(grep wlp /proc/net/wireless | awk '{ print int($3 * 100 / 70) }')

TEXT=$([ $QUALITY ] && echo " $QUALITY%: $(iwgetid | sed 's/^.*:\"//;s/\"//')" || echo "")


echo "$TEXT"
echo "$TEXT"
~/.config/i3blocks/colorcode $QUALITY

