#!/bin/bash
#Backlight detection
if [[ $button -eq 1 ]] || [[ $button -eq 4 ]]; then
	xbacklight + 10
elif [[ $button -eq 3 ]] || [[ $button -eq 5 ]]; then
	xbacklight - 10
fi

TEXT=$(xbacklight | awk '{ printf("%.f", $1) }')
echo "<b> $TEXT%</b>"
echo " $TEXT%"
~/.config/i3blocks/colorcode $TEXT
