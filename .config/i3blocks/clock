#!/bin/bash

if [[ $button -eq 1 ]]; then
	date +" %H:%M:%S"
	date +" %H:%M:%S"
else
	date +" %H:%M"
	date +" %H:%M"
fi
~/.config/i3blocks/colorcode $[($(date +%H | sed "s/^0//")*3600+$(date +%M | sed "s/^0//"))/432]

if ! [[ $(pgrep -x redshift) ]] && [[ $(date +"%H") -ge 18 ]]; then
	i3 exec redshift >> /dev/null
fi

