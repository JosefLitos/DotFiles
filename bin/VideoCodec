#!/bin/sh
query() {
	for f in *; do
		if [ -d "$f" ]; then
			printf "\033[0;36m$f {"
			cd $f
			query "$f"
			cd ..
			printf "\033[0;36m}"
		#elif [ "$(ffprobe $f 2>&1 >/dev/null | grep 'Stream.*Video: mpeg')" ]; then
		elif [[ $f == *'.avi' ||  $f == *'.mp4' || $f == *'.mkv' ]]; then
			while read -a l; do
				[ "${l[2]}" == 'Video:' ] && cc=${l[3]} && break
			done <<< $(ffprobe "$f" 2>&1)
			# if [[ $cc != h* ]]; then
				case "$cc" in
					"hevc") C='\033[32m';;
					"h264") C='\033[33m';;
					"mpeg4") C='\033[31m';;
					*) C='\033[35m';;
				esac
				declare -i size=$(stat -c%s "$f")/1000000
				C=$([ $size -gt 2000 ]\
					&& printf '\033[1;4m' || printf '\033[0m')$C
				printf $C$size"M\t$cc\033[37m\t${f##*/}"
			# fi
		fi
	done
}
WD=$PWD
cd $1
query
echo -e "\033[0m"
cd $WD
